{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Sistema de Inquéritos",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "readFile": true,
        "writeFile": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "open": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.sistema.inqueritos",
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/128x128.png"
      ],
      "resources": ["database.sqlite"],
      "externalBin": [],
      "category": "Business",
      "shortDescription": "Sistema de Inquéritos Desktop",
      "longDescription": "Sistema completo para gerenciamento de inquéritos policiais offline"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Sistema de Inquéritos",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}